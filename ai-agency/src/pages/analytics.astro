---
import PageLayout from "../layouts/PageLayout.astro";
import { AnalyticsDashboard } from "../components/sections/analytics-dashboard";

const title = "Call Analytics Dashboard";
const description = "Real-time insights into your AI voice agent's performance, call volume, and revenue generation.";
---

<PageLayout
  metadata={{
    title: `${title} - VocalBeam`,
    description: description,
  }}
>
  <section class="py-24 px-4 sm:px-6 lg:px-8">
    <div class="container mx-auto">
      <div class="mb-12 text-center lg:text-left">
        <h1 class="text-4xl md:text-5xl font-light tracking-tight text-foreground mb-4">
          Voice Agent Analytics
        </h1>
        <p class="text-lg text-muted-foreground max-w-2xl">
          Monitor your AI voice agent's performance across outbound and inbound calls, tracking everything from booking success rates to revenue impact.
        </p>
      </div>

      <AnalyticsDashboard client:load />
    </div>
  </section>
</PageLayout>
